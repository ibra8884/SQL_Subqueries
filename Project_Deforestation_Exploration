-- 1. Create a View called “forestation” by joining all three tables - forest_area, land_area and regions in the workspace.

CREATE view forestation
AS
  SELECT f.country_code,
         f.country_name,
         f.year,
         f.forest_area_sqkm,
         l.total_area_sq_mi,
         l.total_area_sq_mi * 2.59                                    AS
            total_area_sqkm,
         r.region,
         r.income_group,
         ( f.forest_area_sqkm / ( l.total_area_sq_mi * 2.59 ) * 100 ) AS
         percentage_forest
  FROM   forest_area f
         INNER JOIN land_area l
                 ON f.country_code = l.country_code
                    AND f.year = l.year
         INNER JOIN regions r
                 ON l.country_code = r.country_code; 

-- GLOBAL SITUATION
-- 1. What was the total forest area (in sq km) of the world in 1990? Please keep in mind that you can use the country record denoted as “World" in the region table.

SELECT region,
       year,
       forest_area_sqkm
FROM   forestation
WHERE  region = 'World'
       AND year = 1990;

-- 2. What was the total forest area (in sq km) of the world in 2016? Please keep in mind that you can use the country record in the table is denoted as “World.”

SELECT region,
       year,
       forest_area_sqkm
FROM   forestation
WHERE  region = 'World'
       AND year = 2016;

-- 3. What was the change (in sq km) in the forest area of the world from 1990 to 2016?

WITH t1990
     AS (SELECT region,
                year,
                forest_area_sqkm
         FROM   forestation
         WHERE  region = 'World'
                AND year = 1990),
     t2016
     AS (SELECT region,
                year,
                forest_area_sqkm
         FROM   forestation
         WHERE  region = 'World'
                AND year = 2016)
SELECT t1990.forest_area_sqkm - t2016.forest_area_sqkm AS difference
FROM   t1990
       INNER JOIN t2016
               ON t1990.region = t2016.region;

-- 4. What was the percent change in forest area of the world between 1990 and 2016?

WITH t1990
     AS (SELECT region,
                year,
                forest_area_sqkm
         FROM   forestation
         WHERE  region = 'World'
                AND year = 1990),
     t2016
     AS (SELECT region,
                year,
                forest_area_sqkm
         FROM   forestation
         WHERE  region = 'World'
                AND year = 2016)
SELECT Round(( t1990.forest_area_sqkm - t2016.forest_area_sqkm ) ::
                          NUMERIC / t1990.forest_area_sqkm :: NUMERIC * 100 ::
             NUMERIC,
              2) AS percent_difference
FROM   t1990
       inner join t2016
               ON t1990.region = t2016.region;

-- 5. If you compare the amount of forest area lost between 1990 and 2016, to which country's total area in 2016 is it closest to?

SELECT country_name,
       year,
       total_area_sq_mi
FROM   forestation
WHERE  total_area_sqkm <= 1324449
ORDER  BY 3 DESC
LIMIT  1;

-- REGIONAL OUTLOOK
-- Create a table that shows the Regions and their percent forest area (sum of forest area divided by sum of land area) in 1990 and 2016.

WITH t1990
AS
  (
           SELECT   region,
                    year,
                    round((sum(forest_area_sqkm)::NUMERIC/sum(total_area_sqkm)::NUMERIC*100)::NUMERIC, 2) AS percent_forest
           FROM     forestation
           WHERE    year = 1990
           GROUP BY 1,
                    2),
  t2016
AS
  (
           SELECT   region,
                    year,
                    round((sum(forest_area_sqkm)::NUMERIC/sum(total_area_sqkm)::NUMERIC*100)::NUMERIC, 2) AS percent_forest
           FROM     forestation
           WHERE    year = 2016
           GROUP BY 1,
                    2)

-- Based on the table you created, ....
-- 1. What was the percent forest of the entire world in 2016? Which region had the HIGHEST percent forest in 2016, and which had the LOWEST, to 2 decimal places?

SELECT *
FROM   t2016
WHERE  region = 'World';

SELECT region,
       year,
       percent_forest
FROM   t2016
ORDER  BY 3 DESC
LIMIT  1; 

SELECT region,
       year,
       percent_forest
FROM   t2016
ORDER  BY 3 ASC
LIMIT  1;

-- 2. What was the percent forest of the entire world in 1990? Which region had the HIGHEST percent forest in 1990, and which had the LOWEST, to 2 decimal places?

SELECT *
FROM   t1990
WHERE  region = 'World';

SELECT region,
       year,
       percent_forest
FROM   t1990
ORDER  BY 3 DESC
LIMIT  1; 

SELECT region,
       year,
       percent_forest
FROM   t1990
ORDER  BY 3 ASC
LIMIT  1; 

-- 3. Based on the table you created, which regions of the world DECREASED in forest area from 1990 to 2016?

SELECT t2016.region,
       t1990.percent_forest "1990_forest",
       t2016.percent_forest "2016_forest"
FROM   t2016
       INNER JOIN t1990 USING (region)
WHERE  t2016.percent_forest < t1990.percent_forest;

-- COUNTRY-LEVEL DETAIL
-- 1. Which 5 countries saw the largest amount decrease in forest area from 1990 to 2016? What was the difference in forest area for each?

WITH t1990
AS
  (
         SELECT country_name,
                region,
                forest_area_sqkm
         FROM   forestation
         WHERE  year = 1990),
  t2016
AS
  (
         SELECT country_name,
                region,
                forest_area_sqkm
         FROM   forestation
         WHERE  year = 2016)
  SELECT     t2016.country_name,
             t2016.region,
             (sum(t1990.forest_area_sqkm) - sum(t2016.forest_area_sqkm)) AS change_sqkm
  FROM       t2016
  INNER JOIN t1990
  USING      (country_name, region)
  GROUP BY   1,
             2
  HAVING     (
                        sum(t1990.forest_area_sqkm) - sum(t2016.forest_area_sqkm)) != 0
  ORDER BY   3 DESC
  LIMIT      6;

-- 2. Which 5 countries saw the largest percent decrease in forest area from 1990 to 2016? What was the percent change to 2 decimal places for each?

WITH t1990
AS
  (
         SELECT country_name,
                region,
                forest_area_sqkm
         FROM   forestation
         WHERE  year = 1990
         AND    forest_area_sqkm != 0),
  t2016
AS
  (
         SELECT country_name,
                region,
                forest_area_sqkm
         FROM   forestation
         WHERE  year = 2016
         AND    forest_area_sqkm != 0)
  SELECT     t2016.country_name,
             t2016.region,
             round(((t1990.forest_area_sqkm - t2016.forest_area_sqkm)::NUMERIC*100::NUMERIC)/t1990.FOREST_AREA_SQKM::NUMERIC, 2) AS pct_change
  FROM       t2016
  INNER JOIN t1990
  USING      (country_name, region)
  GROUP BY   1,
             2,
             3
  ORDER BY   3 DESC
  LIMIT      5;

-- 3. If countries were grouped by percent forestation in quartiles, which group had the most countries in it in 2016?

WITH t1
     AS (SELECT country_name,
                year,
                ( Sum(forest_area_sqkm) * 100 / Sum(total_area_sqkm) ) AS
                forest_prc,
                CASE
                  WHEN ( Sum(forest_area_sqkm) * 100 / Sum(total_area_sqkm) )
                       BETWEEN
                       75
                       AND 100
                THEN '75%-100%'
                  WHEN ( Sum(forest_area_sqkm) * 100 / Sum(total_area_sqkm) )
                       BETWEEN
                       50
                       AND
                       74.99 THEN '50%-75%'
                  WHEN ( Sum(forest_area_sqkm) * 100 / Sum(total_area_sqkm) )
                       BETWEEN
                       25
                       AND
                       49.99 THEN '25%-50%'
                  ELSE '0%-25%'
                END                                                    AS
                quartiles
         FROM   forestation
         WHERE  year = 2016
         GROUP  BY 1,
                   2)
SELECT quartiles,
       Count(country_name) AS num_of_countr
FROM   t1
WHERE  forest_prc != 0
       AND country_name != 'World'
GROUP  BY 1; 

-- 4. List all of the countries that were in the 4th quartile (percent forest > 75%) in 2016.

WITH t1
     AS (SELECT country_name,
                region,
                year,
                ( SUM(forest_area_sqkm) * 100 / SUM(total_area_sqkm) ) AS
                forest_prc,
                CASE
                  WHEN ( SUM(forest_area_sqkm) * 100 / SUM(total_area_sqkm) )
                       BETWEEN
                       75
                       AND 100
                THEN '75%-100%'
                  WHEN ( SUM(forest_area_sqkm) * 100 / SUM(total_area_sqkm) )
                       BETWEEN
                       50
                       AND
                       74.99 THEN '50%-75%'
                  WHEN ( SUM(forest_area_sqkm) * 100 / SUM(total_area_sqkm) )
                       BETWEEN
                       25
                       AND
                       49.99 THEN '25%-50%'
                  ELSE '0%-25%'
                END                                                    AS
                quartiles
         FROM   forestation
         WHERE  year = 2016
                AND forest_area_sqkm != 0
                AND total_area_sqkm != 0
         GROUP  BY 1,
                   2,
                   3)
SELECT country_name,
       region,
       Round(forest_prc :: NUMERIC, 2) AS pct_forest
FROM   t1
WHERE  quartiles = '75%-100%'
ORDER  BY 3 DESC; 

-- 5. How many countries had a percent forestation higher than the United States in 2016?

WITH t1
     AS (SELECT country_name,
                year,
                ( Sum(forest_area_sqkm) * 100 / Sum(total_area_sqkm) ) AS
                forest_prc
         FROM   forestation
         WHERE  year = 2016
                AND forest_area_sqkm != 0
                AND total_area_sqkm != 0
         GROUP  BY 1,
                   2),
     t2
     AS (SELECT country_name,
                year,
                forest_prc
         FROM   t1
         WHERE  country_name = 'United States')
SELECT Count(t1.country_name)
FROM   t1
       INNER JOIN t2 using (year)
WHERE  t1.forest_prc > t2.forest_prc; 

-- SUCCESS STORIES
-- Absolute Bright Spots

WITH t1990
AS
  (
         SELECT country_name,
                region,
                forest_area_sqkm
         FROM   forestation
         WHERE  year = 1990),
  t2016
AS
  (
         SELECT country_name,
                region,
                forest_area_sqkm
         FROM   forestation
         WHERE  year = 2016)
  SELECT     t2016.country_name,
             t2016.region,
             (sum(t1990.forest_area_sqkm) - sum(t2016.forest_area_sqkm)) AS change_sqkm
  FROM       t2016
  INNER JOIN t1990
  USING      (country_name, region)
  GROUP BY   1,
             2
  HAVING     (
                        sum(t1990.forest_area_sqkm) - sum(t2016.forest_area_sqkm)) != 0
  ORDER BY   3 ASC
  LIMIT      2;

-- Percentage Bright Spots

WITH t1990
AS
  (
         SELECT country_name,
                region,
                forest_area_sqkm
         FROM   forestation
         WHERE  year = 1990
         AND    forest_area_sqkm != 0),
  t2016
AS
  (
         SELECT country_name,
                region,
                forest_area_sqkm
         FROM   forestation
         WHERE  year = 2016
         AND    forest_area_sqkm != 0)
  SELECT     t2016.country_name,
             t2016.region,
             round(((t1990.forest_area_sqkm - t2016.forest_area_sqkm)::NUMERIC*100::NUMERIC)/t1990.FOREST_AREA_SQKM::NUMERIC, 2) AS pct_change
  FROM       t2016
  INNER JOIN t1990
  USING      (country_name, region)
  GROUP BY   1,
             2,
             3
  ORDER BY   3 ASC
  LIMIT      1;